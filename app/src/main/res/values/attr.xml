<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EditClearView">
        <attr name="edt_clear_hint" format="string"/>
        <attr name="edt_clear_hint_color" format="color"/>
        <attr name="edt_clear_text_size" format="dimension"/>
        <attr name="edt_clear_text_color" format="color"/>
        <attr name="edt_clear_height" format="dimension"/>
        <attr name="edt_clear_padding_start" format="dimension"/>
        <attr name="edt_clear_padding_end" format="dimension"/>
        <attr name="img_clear_icon" format="reference"/>
        <attr name="img_clear_width" format="dimension"/>
        <attr name="img_clear_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EditPasswordView">
        <attr name="edt_password_hint" format="string"/>
        <attr name="edt_password_hint_color" format="color"/>
        <attr name="edt_password_text_size" format="dimension"/>
        <attr name="edt_password_text_color" format="color"/>
        <attr name="edt_password_height" format="dimension"/>
        <attr name="edt_password_padding_start" format="dimension"/>
        <attr name="edt_password_padding_end" format="dimension"/>
        <attr name="img_password_icon" format="reference"/>
        <attr name="img_password_width" format="dimension"/>
        <attr name="img_password_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ClockView">
        <attr name="clock_margin" format="dimension"/>
        <attr name="clock_color" format="color"/>
        <attr name="clock_num_size" format="dimension"/>
        <attr name="clock_in_circle_radius" format="dimension"/>
        <attr name="clock_out_circle_radius" format="dimension"/>
        <attr name="clock_date_text_size" format="dimension"/>
        <attr name="clock_date_text_color" format="color"/>
        <!--时针的颜色-->
        <attr name="clock_hour_color" format="color"/>
        <!--分针的颜色-->
        <attr name="clock_minute_color" format="color"/>
        <!--秒针的颜色-->
        <attr name="clock_second_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="StarView">
        <!--填充颜色(填充模式)-->
        <attr name="star_select_color" format="color"/>
        <!--线条颜色-->
        <attr name="star_line_color" format="color"/>
        <!--线条宽度(边框模式)-->
        <attr name="star_stroke_width" format="dimension"/>
        <!--几边形-->
        <attr name="star_number" format="integer"/>
        <!--填充还是边框-->
        <attr name="star_flag" format="enum">
            <enum name="FILL" value="0"/>
            <enum name="STROKE" value="1"/>
        </attr>
        <!--填充百分比(从左到右)(填充模式)-->
        <attr name="star_fill_percent" format="float"/>
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <attr name="ratingBar_star_number" format="integer"/>
        <attr name="ratingBar_src_color" format="color"/>
        <attr name="ratingBar_des_color" format="color"/>
        <attr name="ratingBar_progress" format="integer"/>
        <attr name="ratingBar_max_progress" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="customTextView_bg" format="color"/>
        <attr name="customTextView_line_color" format="color"/>
        <attr name="customTextView_line_height" format="dimension"/>
    </declare-styleable>
</resources>