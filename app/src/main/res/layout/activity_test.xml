<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <app.lonzh.customview.compose.TestView
            android:id="@+id/testView"
            android:background="@color/black10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"/>

        <app.lonzh.customview.compose.CustomTextView
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:padding="@dimen/dp_20"
            app:customTextView_bg="@color/black50"
            app:customTextView_line_color="@color/purple_500"
            app:customTextView_line_height="@dimen/dp_4"
            app:layout_constraintTop_toBottomOf="@id/testView"
            android:layout_width="wrap_content"
            android:text="@string/you_are_best"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>